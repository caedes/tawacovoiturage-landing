!!! 5
%html
  %head
    %title= $page_title
    %link{rel: 'stylesheet', type: 'text/css', media: 'screen', href: 'css/style.css'}

  %body{style: "background-color:#{$bg_color};"}
    #container
      .box
        %h2= 'Logged Contacts'
        %h4= "So far, #{@contacts.count} people have signed up."
        %table{cellpadding: '10px'}
          %thead.even
            %td{class: 'table-name'}= 'Name'
            %td{class: 'table-type'}= 'Type'
            %td{class: 'table-referer'}= 'Referer URL'
          - @contacts.each_with_index do |contact, i|
            %tr{class: i%2 == 0 ? 'even' : 'odd'}
              %td{class: 'table-name'}= contact['name']
              %td{class: 'table-type'}= contact['type']
              %td{class: 'table-referer'}= contact['referer']
